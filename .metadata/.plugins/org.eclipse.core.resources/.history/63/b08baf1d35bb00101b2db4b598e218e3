package ai.presight.orderservice.client;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.*;

@FeignClient(name = "inventory-service", url = "http://localhost:8081/api/v1/inventory")
public interface InventoryClient {

    @GetMapping("/sku/{skuCode}")
    boolean isInStock(@PathVariable("skuCode") String skuCode, @RequestParam("qty") int qty);

    @PostMapping("/deduct")
    void deductStock(@RequestParam("skuCode") String skuCode, @RequestParam("qty") int qty);
}
