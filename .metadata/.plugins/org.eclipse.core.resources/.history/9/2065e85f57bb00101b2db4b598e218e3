server:
  port: 8080

spring:
  application:
    name: api-gateway

cloud:
  gateway:
      routes:
        - id: inventory-service
          uri: http://localhost:8081
          predicates:
            - Path=/api/v1/inventory/**
          filters:
            - StripPrefix=1

        - id: order-service
          uri: http://localhost:8082
          predicates:
            - Path=/api/v1/orders/**
				          filters:
				            - StripPrefix=1