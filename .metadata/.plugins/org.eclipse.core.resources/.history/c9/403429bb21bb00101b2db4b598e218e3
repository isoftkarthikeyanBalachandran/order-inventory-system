server:
  port: 8081

spring:
  datasource:
    url: jdbc:postgresql://localhost:5432/inventorydb
    username: postgres
    password: postgres
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update   # Auto-create tables based on your entity (safe for dev)
    show-sql: true
    properties:
      hibernate:
        format_sql: true
    database-platform: org.hibernate.dialect.PostgreSQLDialect

  jackson:
    serialization:
      indent_output: true

logging:
  level:
    root: INFO
    org.hibernate.SQL: DEBUG
    org.springframework.web: INFO
    ai.presight.inventoryservice: DEBUG

inventory:
  threshold: 10

management:
	  endpoints:
	    web:
	      exposure:
	        include: health,info
	  endpoint:
	    health:
	      show-details: always
	  security:
	    enabled: false