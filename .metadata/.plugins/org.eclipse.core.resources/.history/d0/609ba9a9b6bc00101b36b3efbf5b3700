server:
  port: 8081

spring:
  application:
    name: inventory-service

  datasource:
    url: jdbc:postgresql://postgres-db:5432/inventorydb
    username: postgres
    password: postgres
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update        # no auto-create in prod
    show-sql: true
    properties:
      hibernate:
        format_sql: true
    database-platform: org.hibernate.dialect.PostgreSQLDialect

  jackson:
    serialization:
      indent_output: true
		
	kafka:
			   bootstrap-servers: kafka:9092
			   producer:
			     key-serializer: org.apache.kafka.common.serialization.StringSerializer
			     value-serializer: org.springframework.kafka.support.serializer.JsonSerializer


logging:
  level:
    root: INFO
    org.hibernate.SQL: DEBUG
    org.springframework.web: INFO
    ai.presight.inventoryservice: DEBUG

inventory:
  threshold: 10              # pulled by @RefreshScope bean


management:
  endpoints:
    web:
      exposure:
        include: health,info
  endpoint:
    health:
      show-details: always
  security:
    enabled: false

# Service Discovery
eureka:
  client:
    service-url:
      defaultZone: http://eureka-server:8761/eureka/
    fetch-registry: true
    register-with-eureka: true
  instance:
    prefer-ip-address: true
